<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">

    <bean id="dataSource"
          class = "org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name = "driverClassName" value = "oracle.jdbc.driver.OracleDriver"/>
        <property name = "url" value = "jdbc:oracle:thin:@//localhost:1521/XE"/>
        <property name = "username" value = "javal3"/>
        <property name = "password" value = "javal3"/>
    </bean>

    <bean id="testDataSource"
          class = "org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name = "driverClassName" value = "org.h2.Driver"/>
        <property name = "url" value = "jdbc:h2:~/test"/>
        <property name = "username" value = "sa"/>
        <property name = "password" value = ""/>
    </bean>

    <bean id="testDataBase"
          class="com.netcracker.lab3.jtp.db.SpringDataBase">
        <constructor-arg name="dataSource" ref="testDataSource"/>
    </bean>

    <bean id="dataBase"
          class="com.netcracker.lab3.jtp.db.SpringDataBase">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="tester" class="org.dbunit.JdbcDatabaseTester">
        <constructor-arg name="driverClass" value="oracle.jdbc.driver.OracleDriver"/>
        <constructor-arg name="connectionUrl" value="jdbc:oracle:thin:@//localhost:1521/XE"/>
        <constructor-arg name="username" value="javal3test"/>
        <constructor-arg name="password" value="javal3test"/>
    </bean>
</beans>